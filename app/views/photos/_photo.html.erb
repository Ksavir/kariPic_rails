<div id="<%= dom_id photo %>">
  <%= image_tag photo.image, class: "w-100" if photo.image.attached? %>
  <div class="d-flex justify-content-between align-items-center">
    <h2 class="display-6 ps-2"><%= photo.title %></h2>
    <p class="pe-2 fst-italic mb-0 opacity-50"><%= photo.created_at.strftime("%Y, %b %d") %></p>
  </div>
  <div class="ps-2">
    <%= simple_format(photo.description) %>
  </div>
</div>
