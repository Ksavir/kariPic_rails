<p style="color: green"><%= notice %><%= alert %></p>
<div class="d-flex flex-row justify-content-between align-items-center">
  <h1>Photos</h1>
  <% if user_signed_in? && current_user.admin? %>
    <span>
      <%= link_to "New photo", new_photo_path, class: "btn btn-outline-primary btn-sm" %>
    </span>
  <% end %>
</div>
<div id="photos">
  <% @photos.each do |photo| %>
    <div class="pb-2 my-4 rounded-3 overflow-hidden bg-card shadow">
      <%= render photo %>
      <%= link_to "Show this photo", photo, class: "ps-2" %>
    </div>
  <% end %>
</div>
