<h1>Editar Comentario</h1>
<%= form_for [@photo, @comment] do |f| %>
  <div class="field d-flex flex-column">
    <%= f.label :body, "Comentario", class: "mb-2 mt-4" %>
    <%= f.text_area :body, class: "mb-3 p-2 rounded-1", rows: 5 %>
  </div>
  <%= f.submit "Actualizar Comentario", class: "btn btn-primary btn-sm mb-3" %>
<% end %>
<%= link_to "Volver a la Foto", @photo %>
